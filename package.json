{
  "name": "notes-electron",
  "version": "1.0.0",
  "description": "A modern note-taking application for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "debug": "electron . --dev --remote-debugging-port=9222 --remote-allow-origins=*",
    "test": "node run-tests.js",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis"
  },
  "keywords": [
    "notes",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "ws": "^8.19.0"
  },
  "build": {
    "appId": "com.notes.electron",
    "productName": "Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/Notes.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/Notes.ico",
      "uninstallerIcon": "resources/Notes.ico",
      "installerHeaderIcon": "resources/Notes.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
